<%- include("header.ejs") %>
<div class="container">
    <style>
        body {
            font-family: 'Noto Sans', sans-serif;
            background-color: #f0f0f0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .container {
            background-color: #fff;
            border: 2px solid #000;
            width: 320px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .header {
            text-align: center;
            margin-bottom: 20px;
        }
        .header img {
            width: 100px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-group label {
            display: block;
            margin-bottom: 5px;
        }
        .form-group input {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
        }

        /* Room statistics */
        #roomStats {
            margin-top: 20px;
            text-align: left;
        }

        .room {
            margin: 5px 0;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
    </style>

    <div class="header">
        <h1 style="margin: 0;">PictoRoom!</h1>
        <small>By <a href="https://poyoweb.org">Poyo</a>!</small>
    </div>

    <form action="/joinRoom" method="POST">
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" required>
        </div>
        <div class="form-group">
            <label for="room">Room Code (invent one for generating a room)</label>
            <input type="text" id="room" name="room" required>
        </div>
        <button type="submit" class="btn">Login</button>
    </form>

    <h2>Room Statistics</h2>
    <div id="roomStats">
        <p>Loading room statistics...</p>
    </div>
</div>

<script>
    const roomStatsDiv = document.getElementById('roomStats');

    // Fetch and display room statistics
    const fetchRoomStats = async () => {
        try {
            const res = await fetch('/stats');
            const stats = await res.json();

            // Update room statistics dynamically
            roomStatsDiv.innerHTML = `
                <p>Total Users in App: ${stats.totalUsers}</p>
                ${stats.rooms
                    .map(
                        room => `
                    <a href="/chat/${room.roomName}?username=${document.getElementById('username').value || 'guest'+Math.floor(Math.random() * 10000)}">
                        <div class="room">
                            <strong>Room Name:</strong> ${room.roomName}<br>
                            <strong>Users:</strong> ${room.users.map(user => user.username).join(', ')}<br>
                            <strong>Capacity:</strong> ${room.userCount} / ${room.maxUsers}
                        </div>
                    </a>
                        `
                    )
                    .join('')}
            `;
        } catch (error) {
            console.error('Failed to fetch room stats:', error);
            roomStatsDiv.innerHTML = `<p>Error loading statistics.</p>`;
        }
    };

    // Refresh room stats every 5 seconds
    setInterval(fetchRoomStats, 5000);

    // Fetch immediately on page load
    fetchRoomStats();
</script>
<%- include("footer.ejs") %>
